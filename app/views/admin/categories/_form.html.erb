<%= form_for [:admin, @category], remote: true do |f| %>
  <%= hidden_field_tag :parent_category_id, @parent_category.id if @parent_category.present? %>
  <div class="form_item">
    <div class="label_item"><%= f.label :title %></div>
    <div class="input_item"><%= f.text_field :title %></div>
  </div>
  <div class="form_item actions">
    <div class="input_item">
      <%= f.submit %>
      <%= link_to tt(:delete), admin_category_path(@category), method: :delete, remote: true, class: 'delete', data: {confirm: tt(:delete_confirm)} if @category.persisted? %>
    </div>
  </div>
<% end %>
