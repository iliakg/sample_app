<div class="form_wrapper">

  <% if @page.errors.any? %>
    <div class="error_explanation">
      <i class="material-icons">error_outline</i>
      <h2>Errors:</h2>
      <ul>
        <% @page.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for [:admin, @page] do |f| %>
    <div class="form_item">
      <div class="label_item"><%= f.label :slug %></div>
      <div class="input_item"><%= f.text_field :slug %></div>
    </div>
    <div class="form_item">
      <div class="label_item"><%= f.label :content %></div>
      <div class="input_item"><%= f.cktext_area :content %></div>
    </div>
    <div class="form_item actions">
      <div class="input_item">
        <%= f.submit %>
        <%= link_to 'Delete', admin_page_path, method: :delete, class: 'delete', data: {confirm: 'are y sure?'} if @page.persisted? %>
      </div>
    </div>
  <% end %>
</div>
