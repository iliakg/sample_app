<div id="progress_bar" style="width: 0%;"></div>

<%= popup_wrapper %>

<div class="content_wrapper">
  <div class="header_wrapper">
    <div class="page_header">
      <h1><%= tt(:file_items, :title) %></h1>
      <div id="new_files_dropzone">
        <div class="dropzone_title">
          <div class="drop_label"><%= tt(:file_items, :drop_zone_title) %></div>
          <i class="material-icons">cloud_upload</i>
        </div>
        <%= form_for FileItem.new, url: admin_file_items_path, remote: true do |f| %>
          <%= f.label :attached_file, "<i class='material-icons'>file_upload</i> #{tt(:file_items, :upload)}".html_safe %>
          <%= f.file_field :attached_file, multiple: true, name: "file_item[attached_file]" %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="page_wrapper">
    <div class="page_content">
      <div class="filter_form_wrapper">
        <%= form_for_filter(FileItem) %>
      </div>
      <div class="table_wrapper">
        <table cellspacing="0" cellpadding="0">
          <thead>
            <tr>
              <td class="left"></td>
              <td class="left"><%= tt(:activerecord, :attributes, :file_item, :title) %></td>
              <td><%= tt(:activerecord, :attributes, :file_item, :created_at) %></td>
              <td></td>
            </tr>
          </thead>
          <tbody>
            <%= render @file_items %>
          </tbody>
        </table>

        <%= will_paginate @file_items %>
      </div>
    </div>
  </div>
</div>
